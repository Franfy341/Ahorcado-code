package joda;
import java.util.*;
public class ahorcado {

	public static void main(String[] args) {
		Scanner lector = new Scanner(System.in);
		
		//variables y arrays
		int vidas = 6;
		int cantletra;
		
		String palabra;
		String palabra2;
		
		System.out.println("Ingrese la palabra que se deberá de adivinar más tarde");
		palabra = lector.nextLine();
		cantletra = palabra.length();
		char[] letrs = palabra.toCharArray();
		
		while (vidas >0) {	
			
			
			letrs = palabra.toCharArray();
			System.out.println("Ingresa una letra");
			palabra2= lector.nextLine();
			
			if (palabra.equals(palabra2)) {
				System.out.println("Ganaste");
				break;
				
			} else {
				System.out.println("La palabra no es la correcta, vuelva a intentarlo");
			}
				if (vidas >= 6) {
					System.out.println(" o ");
					System.out.println("/|/");
					System.out.println("/ /");
					
				} else if (vidas == 5) {
					System.out.println(" o ");
					System.out.println("/|/");
					System.out.println("/  ");
					
				} else if (vidas == 4) {
					System.out.println(" o ");
					System.out.println("/|/");
					System.out.println("");
					
				} else if (vidas == 3) {
					System.out.println(" o ");
					System.out.println("/| ");
					System.out.println("   ");
					
				} else if (vidas == 2) {
					System.out.println(" o ");
					System.out.println(" | ");
					System.out.println("   ");
					
				} else if (vidas == 1) {
					System.out.println(" o ");
					System.out.println("   ");
					System.out.println("   ");
					System.out.println("¡¡Ten cuidado, solo tienes una oportunidad!!");
					
				} else {
					System.out.println("No le quedan más vidas, usted ha perdido");
				}

			
		}
	}
 
}
